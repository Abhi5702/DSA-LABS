package com.arrayproblems;

public class LeaderInArray {

	public static void LeaderArray(int[] arr, int n) {

		int cur_ldr = n - 2;
		System.out.println(cur_ldr);

		for (int i = n - 2; i >= 0; i--) {
			if (cur_ldr > arr[i]) {
				arr[i] = cur_ldr;
				System.out.println(cur_ldr);
			}
		}
	}

	public static void main(String[] args) {
		int[] arr = { 7, 10, 4, 10, 6, 5, 2 };
LeaderArray(arr,n);
	}
}
